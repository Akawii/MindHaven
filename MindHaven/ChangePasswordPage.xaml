<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindHaven.ChangePasswordPage"
             Padding="30"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Back Button -->
        <Button x:Name="CloseMenuButton"
                Text="←"
                FontSize="24"
                BackgroundColor="Transparent"
                Clicked="OnMenuButtonClicked"
                HorizontalOptions="Start"
                Margin="0,0,0,20"
                Grid.Row="0"/>

        <!-- Main Content -->
        <VerticalStackLayout Spacing="15" 
                            VerticalOptions="Center"
                            Grid.Row="1">
            <Label Text="Change Password" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="{StaticResource TextColorLight}"/>

            <!-- Current Password -->
            <Entry x:Name="CurrentPassword" 
                   Placeholder="Current Password" 
                   IsPassword="True" />

            <!-- New Password -->
            <Entry x:Name="NewPassword" 
                   Placeholder="New Password" 
                   IsPassword="True" />

            <!-- Confirm New Password -->
            <Entry x:Name="ConfirmNewPassword" 
                   Placeholder="Confirm New Password" 
                   IsPassword="True" />

            <!-- Change Password Button -->
            <Button Text="Change Password"
                    Clicked="OnChangePasswordClicked"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White" />

            <!-- Status Message -->
            <Label x:Name="StatusMessage" 
                   Text="" 
                   TextColor="Red" 
                   IsVisible="False" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>