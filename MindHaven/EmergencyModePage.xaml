<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindHaven.EmergencyModePage">

    <AbsoluteLayout>

        <!-- Main Grid Layout -->
        <Grid x:Name="MainGrid"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Menu Button (Top Left) -->
            <Button x:Name="MenuButton"
                    Text="☰"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    Clicked="OnMenuButtonClicked"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Margin="10"
                    Grid.Column="0"/>

            <!-- Full-Screen Overlay for Logout Popup -->
            <AbsoluteLayout IsVisible="False" x:Name="LogoutPopupOverlay"
                            BackgroundColor="Black" Opacity="0.6"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            ZIndex="100"/>

        </Grid>

        <!-- Emergency Mode Breathing Bubble -->
        <Frame x:Name="BreathingBubble"
               WidthRequest="200"
               HeightRequest="200"
               BackgroundColor="LightBlue"
               CornerRadius="100"
               HasShadow="True"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               AbsoluteLayout.LayoutBounds="0.5,0.6,AutoSize,AutoSize"
               AbsoluteLayout.LayoutFlags="PositionProportional">
            <!-- Text Label that will change based on the breathing phase -->
            <Label x:Name="BreathingText"
                   Text="Inspire..."
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="White"
                   FontSize="20" />
        </Frame>

        <!-- Emergency Mode Button (now overlayed, not blocking popups) -->
        <Button Text="Contactar Contactos Emergencia"
                BackgroundColor="Red"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                CornerRadius="10"
                WidthRequest="400"
                Padding="10,5"
                HorizontalOptions="Center"
                AbsoluteLayout.LayoutBounds="0.5,1,AutoSize,AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Margin="0,0,0,20"
                Clicked="OnSendEmergencyMessage"/>

    </AbsoluteLayout>

</ContentPage>
