<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindHaven.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="15" BackgroundColor="LightBlue">
        <Label Text="Login" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"/>

        <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="Blue" TextColor="White"/>
        <Button Text="Create an Account" Clicked="OnRegisterClicked" BackgroundColor="Transparent" TextColor="Blue"/>
    </VerticalStackLayout>
</ContentPage>
